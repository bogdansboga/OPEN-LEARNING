import datetime

today = datetime.date.today()

print("COUNTDOWN")
day = int(input("Day > "))
month = int(input("Month > "))
year = int(input("Year > "))
event = datetime.date(year, month, day)

diff = event - today
diff = diff.days

if diff>0:
  print(diff)
elif diff<0:
