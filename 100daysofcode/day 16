print()
attempt = 0
while True:
  attempt += 1
  print("Never gonna ____ you up")
  ans = input(">  ")
  if ans == "give":
    break
  else:
    print("No, try again")
print("Nice one, it took you", attempt, "attempts. let's try next?")
will = input(">  ")
if will == "yes" or will == "Yes":
